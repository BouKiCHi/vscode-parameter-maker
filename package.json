{
    "name": "parameter-maker",
    "displayName": "Parameter Maker",
    "description": "Assists in creating text parameters.",
    "version": "0.3.3",
    "publisher": "boukichi",
    "license": "BSD-3-Clause",
    "icon": "img/icon.png",
    "categories": [
        "Formatters"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/BouKiCHi/vscode-parameter-maker.git"
    },
    "activationEvents": [
        "onCommand:parameter-maker.AddTextToSelections",
        "onCommand:parameter-maker.EncloseAllSectionsWithInputChars",
        "onCommand:parameter-maker.ReselectLineFromText",
        "onCommand:parameter-maker.ReselectWordsFromText",
        "onCommand:parameter-maker.MergeNLines",
        "onCommand:parameter-maker.CopySelectedTextNTimes",
        "onCommand:parameter-maker.FilterSelectionByIndexInLine",
        "onCommand:parameter-maker.ParameterizeSelection",
        "onCommand:parameter-maker.ParameterizeSelectionWithInput",
        "onCommand:parameter-maker.ReselectTextWithRegExp",
        "onCommand:parameter-maker.CopySelectedText",
        "onCommand:parameter-maker.QuoteSelect",
        "onCommand:parameter-maker.ParameterizeClipboard",
        "onCommand:parameter-maker.ReselectWithDelimiter",
        "onCommand:parameter-maker.CombineClipboard",
        "onCommand:parameter-maker.ReselectWithInputDelimiter",
        "onCommand:parameter-maker.SplitParameterize"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": [
            {
                "title": "Parameter Maker",
                "properties": {
                    "parameter-maker.Quote": {
                        "type": "string",
                        "description": "%parameter-maker.QuoteCharactersWhenCreatingParameters%",
                        "default": "'"
                    },
                    "parameter-maker.OpeningEnclosureCharacter": {
                        "type": "string",
                        "description": "%parameter-maker.OpeningEnclosureCharacter%",
                        "default": "'"
                    },
                    "parameter-maker.ClosingEnclosureCharacter": {
                        "type": "string",
                        "description": "%parameter-maker.ClosingEnclosureCharacter%",
                        "default": "'"
                    },
                    "parameter-maker.Delimiter": {
                        "type": "string",
                        "description": "%parameter-maker.Delimiter%",
                        "default": ","
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "parameter-maker.AddTextToSelections",
                "title": "%parameter-maker.AddTextToSelections.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.EncloseAllSectionsWithInputChars",
                "title": "%parameter-maker.EncloseAllSectionsWithInputChars.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.ReselectLineFromText",
                "title": "%parameter-maker.ReselectLineFromText.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.ReselectWordsFromText",
                "title": "%parameter-maker.ReselectWordsFromText.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.MergeNLines",
                "title": "%parameter-maker.MergeNLines.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.CopySelectedTextNTimes",
                "title": "%parameter-maker.CopySelectedTextNTimes.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.FilterSelectionByIndexInLine",
                "title": "%parameter-maker.FilterSelectionByIndexInLine.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.ParameterizeSelection",
                "title": "%parameter-maker.ParameterizeSelection.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.ParameterizeSelectionWithInput",
                "title": "%parameter-maker.ParameterizeSelectionWithInput.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.ReselectTextWithRegExp",
                "title": "%parameter-maker.ReselectTextWithRegExp.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.CopySelectedText",
                "title": "%parameter-maker.CopySelectedText.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.QuoteSelect",
                "title": "%parameter-maker.QuoteSelect.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.ParameterizeClipboard",
                "title": "%parameter-maker.ParameterizeClipboard.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.ReselectWithDelimiter",
                "title": "%parameter-maker.ReselectWithDelimiter.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.CombineClipboard",
                "title": "%parameter-maker.CombineClipboard.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.ReselectWithInputDelimiter",
                "title": "%parameter-maker.ReselectWithInputDelimiter.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.SplitParameterize",
                "title": "%parameter-maker.SplitParameterize.title%",
                "category": "Parameter"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "submenu": "parameter-maker.ContextMenu",
                    "group": "7_modification"
                }
            ],
            "parameter-maker.ContextMenu" :[
                {
                    "command": "parameter-maker.ReselectLineFromText",
                    "when": "editorHasSelection",
                    "group": "1_reselect"
                },
                {
                    "command": "parameter-maker.ReselectWordsFromText",
                    "when": "editorHasSelection",
                    "group": "1_reselect"
                },
                {
                    "command": "parameter-maker.ReselectWithDelimiter",
                    "when": "editorHasSelection",
                    "group": "1_reselect"
                },
                {
                    "command": "parameter-maker.ReselectWithInputDelimiter",
                    "when": "editorHasSelection",
                    "group": "1_reselect"
                },
                {
                    "command": "parameter-maker.CopySelectedText",
                    "when": "editorHasSelection",
                    "group": "2_copy"
                },
                {
                    "command": "parameter-maker.QuoteSelect",
                    "when": "editorHasSelection",
                    "group": "3_quote"
                },
                {
                    "command": "parameter-maker.ParameterizeSelection",
                    "when": "editorHasSelection",
                    "group": "4_parameter"
                },
                {
                    "command": "parameter-maker.ParameterizeClipboard",
                    "group": "4_parameter"
                },
                {
                    "command": "parameter-maker.CombineClipboard",
                    "group": "4_parameter"
                },
                {
                    "command": "parameter-maker.SplitParameterize",
                    "group": "4_parameter"
                }
            ],
            "commandPalette": [
                {
                    "command": "parameter-maker.CopySelectedTextNTimes",
                    "when": "editorHasSelection"
                },
                {
                    "command": "parameter-maker.CopySelectedText",
                    "when": "editorHasSelection"
                }
            ]
        },
        "submenus": [
            {
                "id": "parameter-maker.ContextMenu",
                "label": "%parameter-maker.Parameter%"
              }
        ]
    },
    "dependencies": {
        "vscode-nls": "^5.0.0"
    },
    "engines": {
		"vscode": "^1.62.0"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
